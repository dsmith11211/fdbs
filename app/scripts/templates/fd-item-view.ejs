<div>
	<form role="form">
		<div class="form-group">
		    <label for="item-title">Title</label>
		    <input type="text" class="form-control" placeholder="Title" id="item-title" value="<%= title %>"/>
		</div>
		<div class="form-group">
		    <label for="item-description">Description</label>
		    <textarea class="form-control" rows="5" placeholder="Description" id="item-description"><%= description %></textarea>
		</div>
		<div class="form-group">
		    <label for="item-description">Internal Notes</label>
		    <textarea class="form-control" rows="3" placeholder="Internal Notes" id="item-description"><%= internal_notes %></textarea>
		</div>
	</form>
</div>

